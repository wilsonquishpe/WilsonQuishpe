<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WilsonQuishpe.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" />
            <Label Text="Inicio de Sesión"  HorizontalOptions="Center" />
            <Entry   x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
            <Entry   x:Name="txtPass" Placeholder="Ingrese la contraseña" IsPassword="True"/>
            <Button  x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>